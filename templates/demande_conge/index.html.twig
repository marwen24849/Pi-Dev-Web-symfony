{% extends 'base.html.twig' %}

{% block title %}Demande de Congé{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0"><i class="fas fa-plane-departure me-2"></i> Demande de Congé</h4>
                </div>
                <div class="card-body">

                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label == 'error' ? 'danger' : 'success' }} mt-2">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.typeConge) }}
                                {{ form_widget(form.typeConge, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group mt-3" id="autre_conge_group">
                                {{ form_label(form.autre) }}
                                {{ form_widget(form.autre, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group mt-3">
                                {{ form_label(form.dateDebut) }}
                                {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group mt-3">
                                {{ form_label(form.dateFin) }}
                                {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.justification) }}
                                {{ form_widget(form.justification, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group mt-3" id="certificate_group">
                                {{ form_label(form.certificate) }}
                                {{ form_widget(form.certificate, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-12 text-end">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-paper-plane me-2"></i> Envoyer la demande
                            </button>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <script>
        function handleTypeChange() {
            const type = document.querySelector('[name$="[typeConge]"]').value;
            document.getElementById('autre_conge_group').style.display = (type === 'Autre') ? 'block' : 'none';
            document.getElementById('certificate_group').style.display = (type === 'Maladie') ? 'block' : 'none';
        }

        document.addEventListener('DOMContentLoaded', handleTypeChange);
        document.querySelector('[name$="[typeConge]"]').addEventListener('change', handleTypeChange);
    </script>
{% endblock %}

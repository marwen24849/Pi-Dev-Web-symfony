{% extends 'base.html.twig' %} {# Use your actual base template name #}

{% block title %}Modifier Projet{% endblock %}

{% block body %}
    <div class="container">
        <div class="page-inner">
            <div class="page-header">
                <h3 class="fw-bold mb-3">Modifier Projet: {{ projet.nomProjet }}</h3>
                {# Optional: Add Breadcrumbs similar to manage.html.twig #}
                <ul class="breadcrumbs mb-3">
                    <li class="nav-home">
                        {# --- ADJUST path to your actual home/dashboard route --- #}
                        <a href="#">
                            <i class="icon-home"></i>
                        </a>
                    </li>
                    <li class="separator">
                        <i class="icon-arrow-right"></i>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_projet_manage') }}">Projets</a>
                    </li>
                    <li class="separator">
                        <i class="icon-arrow-right"></i>
                    </li>
                    <li class="nav-item">
                        <a href="#">Modifier</a>
                    </li>
                </ul>
            </div>

            {# Display Flash Messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Modifier les informations</div>
                        </div>
                        {# Use edit_form variable passed from controller #}
                        {{ form_start(edit_form) }}
                        <div class="card-body">
                            {# Replicate the form layout from manage.html.twig, using edit_form #}
                            <div class="form-group row mb-3 align-items-center">
                                {{ form_label(edit_form.nomProjet, null, {'label_attr': {'class': 'col-md-2 col-form-label text-md-end'}}) }}
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.nomProjet, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(edit_form.nomProjet) }}
                                </div>
                            </div>
                            <div class="form-group row mb-3 align-items-center">
                                {{ form_label(edit_form.equipe, null, {'label_attr': {'class': 'col-md-2 col-form-label text-md-end'}}) }}
                                <div class="col-md-4">
                                    {{ form_widget(edit_form.equipe, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(edit_form.equipe) }}
                                </div>
                            </div>
                            <div class="form-group row mb-3 align-items-center">
                                {{ form_label(edit_form.responsable, null, {'label_attr': {'class': 'col-md-2 col-form-label text-md-end'}}) }}
                                <div class="col-md-10">
                                    {{ form_widget(edit_form.responsable, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(edit_form.responsable) }}
                                </div>
                            </div>
                            <div class="form-group row mb-3 align-items-center">
                                {{ form_label(edit_form.dateDebut, null, {'label_attr': {'class': 'col-md-2 col-form-label text-md-end'}}) }}
                                <div class="col-md-4">
                                    {{ form_widget(edit_form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(edit_form.dateDebut) }}
                                </div>
                            </div>
                            <div class="form-group row mb-3 align-items-center">
                                {{ form_label(edit_form.dateFin, null, {'label_attr': {'class': 'col-md-2 col-form-label text-md-end'}}) }}
                                <div class="col-md-4">
                                    {{ form_widget(edit_form.dateFin, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(edit_form.dateFin) }}
                                </div>
                            </div>
                            {{ form_rest(edit_form) }} {# For CSRF #}
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-save"></i> Enregistrer
                            </button>
                            <a href="{{ path('app_projet_manage') }}" class="btn btn-danger">
                                <i class="fa fa-times"></i> Annuler
                            </a>
                        </div>
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>

        </div> {# End page-inner #}
    </div> {# End container #}
{% endblock %}
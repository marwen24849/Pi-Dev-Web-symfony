<!-- Modal Update Quiz -->
<div class="modal fade" id="editModal{{ quiz.id }}" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title">Modifier le Quiz</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="updateQuizForm{{ quiz.id }}">
                    <div class="mb-3">
                        <label class="form-label">Titre</label>
                        <input type="text" class="form-control" name="title" value="{{ quiz.title }}">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Pourcentage minimum de réussite</label>
                        <input type="number" class="form-control" name="minimumSuccessPercentage" value="{{ quiz.minimumSuccessPercentage }}">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Durée du Quiz (minutes)</label>
                        <input type="number" class="form-control" name="quizTime" value="{{ quiz.quizTime }}">
                    </div>
                    <div class="mb-3 text-end">
                        <button type="button" class="btn btn-success" onclick="updateQuiz({{ quiz.id }})">Enregistrer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
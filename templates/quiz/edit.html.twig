{% extends 'base.html.twig' %}

{% block title %}Modifier Quiz{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-question-circle me-2"></i> Modifier Quiz
                    </h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="row">
                        <!-- Colonne gauche -->
                        <div class="col-md-6">
                            <div class="form-group  mt-3">
                                <label class="form-label">Titre du Quiz</label>
                                {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le titre'}}) }}
                            </div>


                            <div class="form-group  mt-3">
                                <label class="form-label">Durée du Quiz (minutes)</label>
                                {{ form_widget(form.quizTime, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group  mt-3">
                                <label class="form-label">Pourcentage minimum de succès</label>
                                {{ form_widget(form.minimumSuccessPercentage, {'attr': {'class': 'form-control'}}) }}
                            </div>


                        </div>

                        <!-- Colonne droite -->
                        <div class="col-md-6">
                            <div class="form-group  mt-3">
                                <label class="form-label">Nombre de Questions</label>
                                <input type="text" class="form-control bg-light" value="{{ form.questionCount.vars.value }}" readonly>
                            </div>
                            <div class="form-group  mt-3">
                                <label class="form-label">Catégorie</label>
                                <input type="text" class="form-control bg-light" value="{{ form.category.vars.value }}" readonly>
                            </div>

                            <div class="form-group mt-3">
                                <label class="form-label">Niveau de difficulté</label>
                                <input type="text" class="form-control bg-light" value="{{ form.difficultylevel.vars.value }}" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-12 text-end">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i> Enregistrer
                            </button>
                        </div>
                    </div>

                    {{ form_end(form, {'render_rest': false}) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}

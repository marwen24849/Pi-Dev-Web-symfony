{% extends 'base.html.twig' %}

{% block title %}Edit Session for {{ formation.title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-lg">
                    <div class="card-header bg-gradient-primary text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="mb-0">
                                <i class="fas fa-calendar-edit me-2"></i>
                                Edit Session: {{ formation.title }}
                            </h3>
                            <div class="badge bg-white text-primary fs-6">
                                {{ session.is_online ? 'Online' : 'In-Person' }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-body p-4">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        
                        <div class="row g-4">
                            <!-- Left Column -->
                            <div class="col-md-6">
                                <div class="form-floating mb-4">
                                    {{ form_widget(form.date, {
                                        'attr': {
                                            'class': 'form-control',
                                            'min': "now"|date("Y-m-d"),
                                            'placeholder': 'Session date'
                                        },
                                        'widget': 'single_text'
                                    }) }}
                                    <label for="{{ form.date.vars.id }}">Session Date</label>
                                </div>
                                
                                <div class="form-check form-switch mb-4">
                                    {{ form_widget(form.is_online, {
                                        'attr': {
                                            'class': 'form-check-input session-type-toggle',
                                            'role': 'switch',
                                            'data-bs-toggle': 'collapse',
                                            'data-bs-target': '.session-type-fields'
                                        }
                                    }) }}
                                    <label class="form-check-label" for="{{ form.is_online.vars.id }}">
                                        Online Session?
                                    </label>
                                </div>
                            </div>
                            
                            <!-- Right Column -->
                            <div class="col-md-6">
                                <div id="in-person-fields" class="session-type-fields collapse {% if not form.vars.value.is_online %}show{% endif %}">
                                    <div class="form-floating mb-4">
                                        {{ form_widget(form.salle, {
                                            'attr': {
                                                'class': 'form-control',
                                                'placeholder': 'Room number'
                                            }
                                        }) }}
                                        <label for="{{ form.salle.vars.id }}">Room Number</label>
                                    </div>
                                </div>
                                
                                <div id="online-fields" class="session-type-fields collapse {% if form.vars.value.is_online %}show{% endif %}">
                                    <div class="form-floating mb-4">
                                        {{ form_widget(form.link, {
                                            'attr': {
                                                'class': 'form-control',
                                                'placeholder': 'Meeting link'
                                            }
                                        }) }}
                                        <label for="{{ form.link.vars.id }}">Meeting Link</label>
                                        <small class="text-muted">Leave blank to auto-generate</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <a href="{{ path('app_session_index', {'formation_id': formation.id}) }}" 
                               class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i> Cancel
                            </a>
                            
                            <div>
                                
                                
                                <button type="submit" class="btn btn-primary ms-2">
                                    <i class="fas fa-save me-2"></i> Save Changes
                                </button>
                            </div>
                        </div>
                        
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const isOnlineCheckbox = document.querySelector('#{{ form.is_online.vars.id }}');
            const onlineFields = document.getElementById('online-fields');
            const inPersonFields = document.getElementById('in-person-fields');

            function toggleFields() {
                if (isOnlineCheckbox.checked) {
                    onlineFields.classList.add('show');
                    inPersonFields.classList.remove('show');
                } else {
                    onlineFields.classList.remove('show');
                    inPersonFields.classList.add('show');
                }
            }

            // Initialize
            toggleFields();
            
            // Add event listener
            isOnlineCheckbox.addEventListener('change', toggleFields);
        });
    </script>

    <style>
        .card-header.bg-gradient-primary {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        }
        .form-floating label {
            color: #6c757d;
        }
        .session-type-fields {
            transition: all 0.3s ease;
        }
    </style>
{% endblock %}
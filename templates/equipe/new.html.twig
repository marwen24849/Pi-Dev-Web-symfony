{# templates/equipe/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}New Equipe{% endblock %}

{% block body %}
    <div class="container mt-4">
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

        {# Affichage des erreurs globales du formulaire #}
        {% if form_errors(form) %}
            <div class="alert alert-danger">
                {{ form_errors(form) }}
            </div>
        {% endif %}

        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center bg-light">
                <h3 class="mb-0">Create New Team</h3>
                <a href="{{ path('app_equipe_index') }}" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>

            <div class="card-body">
                {{ include('equipe/_form.html.twig') }}
            </div>

            <div class="card-action p-3 border-top">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-2"></i>Submit
                </button>
            </div>
        </div>

        {{ form_rest(form) }}
        {{ form_end(form, {'render_rest': false}) }}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            border-radius: 8px;
            overflow: hidden;
        }
        .card-header {
            border-radius: 8px 8px 0 0 !important;
        }
        .card-action {
            background-color: #f8f9fa;
            border-radius: 0 0 8px 8px !important;
        }
        .alert.alert-danger {
            margin-bottom: 1rem;
        }
    </style>
{% endblock %}
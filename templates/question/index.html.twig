{% extends 'base.html.twig' %}

{% block title %}Liste des Questions{% endblock %}

{% block body %}
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="card-title">Liste des Questions</h4>
                <a href="{{ path('app_question_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nouvelle Question
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
 <table id="multi-filter-select" class="display table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Titre</th>
                            <th>Catégorie</th>
                            <th>Difficulté</th>
                            <th>Score</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Titre</th>
                            <th>Catégorie</th>
                            <th>Difficulté</th>
                            <th>Score</th>
                            <th>Actions</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        {% for question in questions %}
                            <tr>
                                <td>{{ question.id }}</td>
                                <td>{{ question.questionTitle }}</td>
                                <td>{{ question.category }}</td>
                                <td>
                                    <span class="badge
                                        {% if question.difficultylevel == 'Facile' %}bg-success
                                        {% elseif question.difficultylevel == 'Moyen' %}bg-warning
                                        {% else %}bg-danger{% endif %}">
                                        {{ question.difficultylevel }}
                                    </span>
                                </td>
                                <td>{{ question.score }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('app_question_show', {'id': question.id}) }}"
                                           class="btn btn-sm btn-info" title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_question_edit', {'id': question.id}) }}"
                                           class="btn btn-sm btn-primary" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">Aucune question trouvée</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}
